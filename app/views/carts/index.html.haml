%h1 Listing carts

%table.table.table-striped
  %tr
    %th
    %th
    %th

  - @carts.each do |cart|
    %tr
      %td= link_to 'Show', cart, class: 'btn btn-default'
      %td= link_to 'Edit', edit_cart_path(cart), class: 'btn btn-default'
      %td= link_to 'Destroy', cart, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger'

%br

= link_to 'New Cart', new_cart_path, class: 'btn btn-primary'
