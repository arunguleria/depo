%h1 Listing line_items

%table
  %tr
    %th Product
    %th Cart
    %th
    %th
    %th

  - @line_items.each do |line_item|
    %tr
      %td= line_item.product
      %td= line_item.cart
      %td= link_to 'Show', line_item, class: 'btn btn-default'
      %td= link_to 'Edit', edit_line_item_path(line_item), class: 'btn btn-default'
      %td= link_to 'Destroy', line_item, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger'

%br

= link_to 'New Line item', new_line_item_path, class: 'btn btn-primary'
