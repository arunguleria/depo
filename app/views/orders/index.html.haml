%h1 Listing orders

%table.table.table-striped
  %tr
    %th Name
    %th Address
    %th Email
    %th Pay type
    %th
    %th
    %th

  - @orders.each do |order|
    %tr
      %td= order.name
      %td= order.address
      %td= order.email
      %td= order.pay_type
      %td= link_to 'Show', order, class: 'btn btn-default'
      %td= link_to 'Edit', edit_order_path(order), class: 'btn btn-default'
      %td= link_to 'Destroy', order, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger'

%br

= link_to 'New Order', new_order_path, class: 'btn btn-primary'
